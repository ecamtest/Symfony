{% extends "CentreFormationBundle::Templates/layout.html.twig" %}

{% block title %}Formateurs{% endblock %}

  {% block body %}

    <div class="panel panel-default">
      <div class="panel-heading">
        <h1 style="margin-bottom: 50px">Liste des formateurs</h1>
        <p><a href="{{ path('_formateurs_add') }}" class="btn btn-primary" role="button">Ajouter un formateur</a></p>
      </div>
      <div class="table-responsive">
        <table class="table table-striped table-bordered">
          <thead>
            <th></th>
            <th>Nom</th>
            <th>Pr√©nom</th>
            <th>GSM</th>
            <th>Email</th>
          </thead>
          <tbody>

            {% for formateur in liste %}

              <tr>
                <td class="text-center">
                  <a href="{{ path('_formateurs_add') }}" class="btn btn-success" role="button" title="Modifier"><span class="glyphicon glyphicon-pencil"></span></a>
                  <a href="{{ path('_formateurs_add') }}" class="btn btn-danger" role="button" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer ce formateur ?')"><span class="glyphicon glyphicon-remove"></span></a>
                </td>
                <td>{{ formateur.nom }}</td>
                <td>{{ formateur.prenom }}</td>
                <td>{{ formateur.gsm }}</td>
                <td>{{ formateur.email }}</td>
              </tr>

            {% endfor %}

          </tbody>
        </table>
      </div>
    </div>

  {% endblock %}