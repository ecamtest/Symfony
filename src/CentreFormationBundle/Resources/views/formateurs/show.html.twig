{% extends "CentreFormationBundle::templates/layout.html.twig" %}

{% block title %}Formateurs{% endblock %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 style="margin-bottom: 50px">Liste des formateurs</h1>
    <p><a href="{{ path('_formateurs_add') }}" class="btn btn-primary" role="button">Ajouter un formateur</a></p>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <th class="text-center">Action</th>
        <th>Nom</th>
        <th>Pr√©nom</th>
        <th>GSM</th>
        <th>Email</th>
      </thead>
      <tbody>

        {% for formateur in liste %}

        <tr>
          <td class="text-center">
            <form action="{{ path('_formateurs_edit', { 'id': formateur.id }) }}" method="get" style="display:inline-block">
              <button type="submit" class="btn btn-success" title="Modifier"><span class="glyphicon glyphicon-pencil"></span></button>
            </form>
            <form action="{{ path('_formateurs_delete', { 'id' : formateur.id }) }}" method="post" style="display:inline-block">
              <button type="submit" class="btn btn-danger" title="Supprimer" onclick="return confirm('Voulez-vous vraiment supprimer ce formateur ?')"><span class="glyphicon glyphicon-remove"></span></button>
            </form>
          </td>
          <td>{{ formateur.nom }}</td>
          <td>{{ formateur.prenom }}</td>
          <td>{{ formateur.gsm }}</td>
          <td>{{ formateur.email }}</td>
        </tr>

        {% endfor %}

      </tbody>
    </table>
  </div>
</div>

{% endblock %}