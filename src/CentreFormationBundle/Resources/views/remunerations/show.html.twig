{% extends "CentreFormationBundle::templates/layout.html.twig" %}

{% block title %}Rémunérations{% endblock %}

{% block body %}

<div class="panel panel-default">
  <div class="panel-heading">
    <h1 style="margin-bottom: 50px">Liste des rémunérations par formateur</h1>
  </div>
  <div class="table-responsive">
    <table class="table table-striped table-bordered">
      <thead>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Rémunération (€)</th>
      </thead>
      <tbody>
        {% for remuneration in remunerations %}
        <tr>
          <td>{{ remuneration.nom }}</td>
          <td>{{ remuneration.prenom }}</td>
          <td>{{ remuneration.remuneration }}</td>
        </tr>

        {% endfor %}

      </tbody>
    </table>
  </div>
</div>

{% endblock %}